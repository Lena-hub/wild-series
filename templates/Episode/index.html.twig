{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}


    <h1>Episode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>
                <br>
                <a href="{{ path('episode_show', {'id': episode.id}) }}"><button class="save">show</button></a>
                <a href="{{ path('episode_edit', {'id': episode.id}) }}"><button class="save">edit</button></a>
                <br>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


     <a href="{{ path('episode_new') }}"><button class="save">creer</button></a>

     <a href="{{ path('program_index') }}"><button id="Retour">Retour</button></a>

{% endblock %}
