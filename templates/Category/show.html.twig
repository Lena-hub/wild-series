{% extends 'base.html.twig' %}

{% block title %}Category #{{ category.name}}{% endblock %}

{% block body %}

<h1 id="CategoryName">{{category.name}}</h1>

{% for program in category.programs %}
        <p class="ProgTitre">{{ program.title }}</p>

 <div class="contenuSerie">

        <img id="IMGprog" src="{{program.poster}}" alt="{{ program.title }} poster">

        <div id="resume">
        <p>{{ program.summary }}</p>
        </div>
 </div>

<div>
    <a  href="{{ path("program_show", { id: program.id }) }}"><button id="VoirFiche">Voir la fiche</button></a>
</div>

{% else %}
        Aucune série trouvée.

{% endfor %}

    <a href="{{ path('category_index') }}"><button id="Retour">Retour</button></a>
{% endblock %}